{
  "name": "@neoaren/comet",
  "version": "1.0.1-beta",
  "description": "A powerful DX-first routing library for Cloudflare Workers.",
  "scripts": {
    "build": "rimraf dist && npm-run-all build:esm build:cjs build:dts",
    "build:esm": "esbuild src/index.ts --bundle --outfile=dist/index.mjs --format=esm --target=es2022",
    "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=cjs --target=es2022",
    "build:dts": "tsc",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --ext ts --fix"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": "github:neoaren/comet",
  "keywords": [
    "cloudflare-workers",
    "cloudflare",
    "workers",
    "routing",
    "comet",
    "router"
  ],
  "author": "NeoAren",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NeoAren/comet/issues"
  },
  "homepage": "https://github.com/NeoAren/comet#readme",
  "dependencies": {
    "hotscript": "^1.0.12",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230518.0",
    "@lint-my-life/eslint-config-comet": "^0.2.2",
    "esbuild": "^0.18.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.3"
  }
}
