{
  "name": "@neoaren/comet",
  "type": "module",
  "version": "3.2.1",
  "description": "A powerful DX-first routing library for Cloudflare Workers.",
  "scripts": {
    "build": "rimraf dist && npm-run-all build:esm build:cjs build:dts",
    "build:esm": "esbuild src/index.ts --bundle --outfile=dist/index.mjs --format=esm --target=es2022 --external:zod --external:hotscript --external:@opentelemetry/*",
    "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/index.cjs --format=cjs --target=es2022 --external:zod --external:hotscript --external:@opentelemetry/*",
    "build:dts": "tsc",
    "lint": "eslint --cache .",
    "lint:fix": "npm run lint -- --fix"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/src/index.d.ts"
    }
  },
  "repository": "github:neoaren/comet",
  "keywords": [
    "cloudflare-workers",
    "cloudflare",
    "workers",
    "routing",
    "comet",
    "router"
  ],
  "author": "NeoAren",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NeoAren/comet/issues"
  },
  "homepage": "https://github.com/NeoAren/comet#readme",
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/api-logs": "^0.46.0",
    "@opentelemetry/sdk-trace-base": "^1.19.0",
    "hotscript": "^1.0.13",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "bundled-eslint-config": "^0.2.18",
    "esbuild": "^0.19.11",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "some-tsconfig-preset": "^1.5.0",
    "typescript": "^5.3.3"
  }
}
